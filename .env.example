# Variables de entorno para desarrollo local

# Seguridad y modo
DJANGO_SECRET_KEY=change-me-in-local
DEBUG=True

# Hosts y orígenes confiables (ajusta a tu dominio si corresponde)
ALLOWED_HOSTS=localhost,127.0.0.1
CSRF_TRUSTED_ORIGINS=http://localhost:8000,http://127.0.0.1:8000
CORS_ALLOWED_ORIGINS=http://localhost:8000,http://127.0.0.1:8000

# Base de datos
# Por defecto se usa SQLite (db.sqlite3). Si quieres usar Postgres en local,
# descomenta y ajusta la siguiente línea:
# DATABASE_URL=postgres://usuario:password@localhost:5432/tu_base

# Email (opcional para desarrollo)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=
DEFAULT_FROM_EMAIL=

# Superusuario automático (opcional)
# Puedes usar cualquiera de los dos esquemas; el proyecto acepta ambos.
ADMIN_USERNAME=admin
ADMIN_EMAIL=admin@sistema-medico.com
ADMIN_PASSWORD=admin123456

# Alternativa compatible
DJANGO_SUPERUSER_USERNAME=admin
DJANGO_SUPERUSER_EMAIL=admin@sistema-medico.com
DJANGO_SUPERUSER_PASSWORD=admin123456

# Región/Hora (opcional)
LANGUAGE_CODE=es-cl
TIME_ZONE=America/Santiago